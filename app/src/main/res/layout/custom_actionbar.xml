<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/custom_actionBar_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/actionbar_tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_actionBar_tv_username"
        android:layout_alignLeft="@+id/custom_actionBar_tv_username"
        android:layout_alignStart="@+id/custom_actionBar_tv_username" />

    <TextView
        android:id="@+id/actionbar_tv_typing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/custom_actionBar_tv_username"
        android:layout_toEndOf="@+id/custom_actionBar_tv_username"
        android:layout_toRightOf="@+id/custom_actionBar_tv_username"/>


</RelativeLayout>