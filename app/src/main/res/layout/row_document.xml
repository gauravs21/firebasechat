<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/row_document_iv_type"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/row_document_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/row_document_iv_type"
            android:layout_toRightOf="@+id/row_document_iv_type"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/row_document_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_document_name"
            android:layout_toEndOf="@+id/row_document_iv_type"
            android:layout_toRightOf="@+id/row_document_iv_type"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>
</android.support.v7.widget.CardView>